<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jiaminwang.test_nearby.secondaryActivity">
tools:layout_editor_absoluteY="81dp"
tools:layout_editor_absoluteX="0dp">

<Button
    android:id="@+id/secondaryButton1"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:text="Event selection"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:text="eventButton" />

<Button
    android:id="@+id/secondaryButton2"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:text="Add to itinerary"
    android:textColorLink="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:text="secondarySearchButton" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="0dp"
    android:layout_height="65dp"
    android:layout_marginEnd="68dp"
    android:layout_marginStart="68dp"
    android:layout_marginTop="4dp"
    android:text="Itinerary"
    android:textAlignment="center"
    android:textSize="30sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    tools:text="iteneraryTitleBox" />


</android.support.constraint.ConstraintLayout>